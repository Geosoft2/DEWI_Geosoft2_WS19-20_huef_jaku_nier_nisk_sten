#!/usr/bin/env node

// jshint esversion: 8
// jshint node: true
"use strict";


/**
 * Module dependencies.
 */
const app = require('../app');
const api = require('../api');
const {requestExtremeWeather} = require('../helpers/saveExtremeWeather');
const {connectMongoDB} = require('../helpers/mongoConnection');
const {createServer} = require('../helpers/createServer');

/**
 * Get port from environment and store in Express.
 */
var portApp = normalizePort('3000');
app.set('port', portApp);

var portApi = normalizePort('3001');
api.set('port', portApi);

/**
 * First connect to MongoDB and then start API-server, then request extreme Weather and finally start APP
 */
 connectMongoDB(function(){
   // create API-Server
   createServer(api, portApi, 'API', function(){
     requestExtremeWeather(function(){
       // create APP-Server
       createServer(app, portApp, 'App');
     });
   });
 });

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}
