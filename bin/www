#!/usr/bin/env node

// jshint esversion: 8
// jshint node: true
"use strict";


/**
 * Module dependencies.
 */
const app = require('../app');
const {requestExtremeWeather} = require('../helpers/saveExtremeWeather');
const {connectMongoDB} = require('../helpers/mongoConnection');
const {createServer} = require('../helpers/createServer');

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * First connect to MongoDB and then start server
 */
 connectMongoDB(function(){
   createServer(app, port, function(){
     requestExtremeWeather();
   });
 });

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}
